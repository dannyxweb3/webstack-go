function rtl(){return typeof window.isRTL=="boolean"||(window.isRTL=jQuery("html").get(0).dir=="rtl"),window.isRTL}function show_loading_bar(n){var e={pct:0,delay:1.3,wait:0,before:function(){},finish:function(){},resetOnEnd:!0};typeof n=="object"?e=jQuery.extend(e,n):typeof n=="number"&&(e.pct=n),e.pct>100?e.pct=100:e.pct<0&&(e.pct=0);var i=jQuery,t=i(".xenon-loading-bar");t.length==0&&(t=i('<div class="xenon-loading-bar progress-is-hidden"><span data-pct="0"></span></div>'),public_vars.$body.append(t));var a=t.find("span"),r=a.data("pct"),s=r>e.pct;e.before(r),TweenMax.to(a,e.delay,{css:{width:e.pct+"%"},delay:e.wait,ease:s?Expo.easeOut:Expo.easeIn,onStart:function(){t.removeClass("progress-is-hidden")},onComplete:function(){var d=a.data("pct");d==100&&e.resetOnEnd&&hide_loading_bar(),e.finish(d)},onUpdate:function(){a.data("pct",parseInt(a.get(0).style.width,10))}})}function hide_loading_bar(){var n=jQuery,e=n(".xenon-loading-bar"),i=e.find("span");e.addClass("progress-is-hidden"),i.width(0).data("pct",0)}
